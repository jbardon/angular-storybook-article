{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    // Storybook need sources instead of compiled libraries because
    // it uses static analysis on TS Angular annotations
    "paths": {
      "@smartadserver/ngx-pumpkin": [
        "projects/lib-components/src/public-api.ts"
      ]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}
